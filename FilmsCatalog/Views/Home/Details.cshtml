@model FilmsCatalog.Models.Movies.MovieDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="card">
    <h5 class="card-header">@Model.Title</h5>
    <div class="card-body">
        <div class="row mb-3">
            @if (!string.IsNullOrEmpty(Model.PosterPath))
            {
                <div class="col-12 col-md-4">
                    <img src="/@Model.PosterPath" class="img-fluid" />
                </div>
            }
            else
            {
                <div class="col-12 col-md-4 text-center">
                    <p>Постер отсутствует</p>
                </div>
            }
            <div class="col-12 col-md-8">
                <p>Год выпуска: @Model.ReleaseYear</p>
                <p>Режиссер: @Model.Director</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>